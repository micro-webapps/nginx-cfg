server {
    listen 9090;
    server_name localhost;
    location /blog {
        alias ./my-static-dir;
        location ~ \.txt$ {
            fastcgi_index index.php;
            fastcgi_pass localhost:8080;
            include fastcgi_params;
            allow all;
        }
        location ~ \.php$ {
            fastcgi_index index.php;
            fastcgi_pass localhost:8081;
            include fastcgi_params;
            allow all;
        }
        fastcgi_index index.php;
        fastcgi_pass localhost:8081;
        include fastcgi_params;
        index index.php;
    }

}
